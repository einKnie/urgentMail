{
  "manifest_version": 2,
  "name":             "UrgentMail",
  "author":           "einKnie@gmx.at",
  "version":          "1.0",
  "description":      "Raise X11 urgent flag on new mail",

  "applications": {
    "gecko": {
      "id": "mailAlert@einKnie",
      "strict_min_version": "78.0"
      }
  },

  "permissions": [
    "messagesRead",
    "accountsRead",
    "storage"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html"
  }

}
